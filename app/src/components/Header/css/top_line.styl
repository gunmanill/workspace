
.b-under-top-line {
	position : fixed;
	height : 40px;  // size up and shift up block with 3px to prevent edge bug
	top : 0px; // shift up 3px
	left : 0;
	right : 0;
	z-index : 64999;
	overflow : hidden;
	width : 100%;
	background-color : rgb(255, 255, 255);

	& .b-blur_wrapper {
		overflow : hidden;
		width : 100%;
		height : 40px;

	}
}


.b-top-line {
  position : fixed;
  height : 40px;
  top : 0;
  left : 0;
  right : 0;
  z-index : 65000;
	background-color : rgba(0, 0, 0, 0.4);
	line-height : 40px;
	text-align : center;

	&_logged {
		.b-top-line-login {
			display : none;

		}
		.b-top-line__create {
			display : none;
		}
		.b-top-line__relWrapper {
			display : inline;
		}
	}

	&_login-adv {
		.b-top-line-login {
			transition: opacity 1s ease;

			opacity : 1;
			margin-top : 0;
		}
	}


	&-login {

		margin : 0 auto;

		width : 215 px;
		opacity : 0;

		&__item {
			background-color: rgba(172, 172, 172, 0.9);
			color : white;
			width : 107px;
			display : inline-block;
			text-align : center;
			text-decoration : none;
			cursor : pointer;
			&:hover {
				color : black;
				transition: color 0.5s ease;
			}
		}

		&_shifted1 {
			margin-left : 1px;
		}
	}

	&__create {
		font-size: 15px;
		font-family: Helvetica Neue, arial, sans-serif;
		color : white;
		margin-left : 35px;
		text-decoration : none;
		cursor : pointer;
		opacity : 0;

		&:hover  {
			color : black;
			transition: color 0.5s ease;
		}
	}

	&-left-sec {
		position : absolute;
		top : 0;
		left : 40px;
	}
  &-menu-left {
		width : 25px;
		vertical-align : middle;
		display :inline-block;
		position : relative;
	  cursor : pointer;

		&_expanded {
			.b-top-line-menu-left__item {
				box-shadow: 0px 0px 15px 5px rgba(255, 255, 255, .35);
				transition: box-shadow 0.2s ease;
			}
		}

		&__item {
		  display : block;
		  height : 4px;
		  background-color : rgba(255, 255, 255, 0.5);
		  margin-bottom : 3px;
		  border-radius : 2px;
		  box-sizing : border-box;
			transition: box-shadow 0.2s ease;
		}

		&:hover {
		  .b-top-line-menu-left__item {
			  box-shadow: 0px 0px 15px 5px rgba(255, 255, 255, .35);
			  transition: box-shadow 0.2s ease;
			}
		}

  }

	&__sitename {
		font-size: 20px;
		font-family: Helvetica Neue, arial, sans-serif;
		color : white;
		margin-left : 15px;
		text-decoration: none;

		&:hover {
			color : black;
			transition: color 0.5s ease;
		}
  }

	&__relWrapper {
		margin-left : 30px;
		position : relative;
		display : inline;
		font-size: 20px;

	}

	&__fillin {
		display:inline-block;
		width : 20px;
		height : 20px;
	}

	&__planet {

		position : absolute;
		left : 0;
		top : 1px;

		&_hover {
			opacity : 0;
			position : absolute;
			left : 0;
			top : 1px;
			transition : opacity 0.3s ease;
			cursor : pointer;

			&:hover {
				opacity : 1;
				transition : opacity 0.3s ease;
			}
		}
  }


	&-menu-right {
		position:absolute;
		right : 40px;
		top : 0;

	  &__item {
			float : right;
			text-decoration : none;
			margin-left : 35px;
			display : inline-block;
			font-size: 15px;
			font-family: Helvetica Neue, arial, sans-serif;
			color : #858586;

			&_active {
				color : white;
			}

			&:hover {
				color : white;
				transition: color 0.5s ease;
			}
	  }
	}
}

.b-menu-list {
  display : none;
  position : fixed;
	z-index: 64999;

  top : 40px;
  left : 0;
  background-color : rgb(255, 255, 255);

	text-align : left;

  &_expanded {
		display : inline-block;
  }
}
